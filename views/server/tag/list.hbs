<div class="row">
    <div class="col-md-12">
        <p class="lead">
            <a href="{{adminDir}}/tag/add" class="btn btn-default btn-sm">添加标签</a>
        </p>
        <table class="table">
            <thead>
            <tr>
                <th>名称</th>
                <th>创建者</th>
                <th>创建时间</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
            {{#each tags}}
            <tr>
                <td><a href="{{../adminDir}}/tag/{{id}}">{{name}}</a></td>
                <td>{{#if author}}{{author.name}}{{else}}无{{/if}}
                </td>
                <td>{{dateFormat created 'yyyy-MM-dd hh:mm:ss'}}</td>
                <td><a href="{{../adminDir}}/tag/{{id}}/edit" class="btn btn-default btn-xs">编辑</a>&nbsp;

                    <a data-toggle="modal"
                       data-target="#myModal"
                       data-url="{{../adminDir}}/tag/{{id}}/del"
                       class="btn btn-default btn-xs"
                    >删除
                    </a>

                </td>
            </tr>
            {{/each}}
            </tbody>
        </table>
        {{#if pageInfo}}
            {{#compare pageInfo.totalPage '>' 1}}
                <ul class="pagination">{{{pagination pageInfo}}}</ul>
            {{/compare}}
        {{/if}}
    </div>
</div>
